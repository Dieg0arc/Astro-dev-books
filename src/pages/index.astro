---
// Import the Layout component which provides the surrounding HTML structure
import Layout from "../layouts/Layout.astro";

// Import utilities from astro:content
// getCollection: Function to fetch content collections
// CollectionEntry: Type definition for the content schema
import { getCollection, type CollectionEntry } from "astro:content";

// Define a type alias 'Book' for the entries in the "books" collection
// This ensures strong typing for the book data used in the template
type Book = CollectionEntry<"books">;

// Fetch all entries from the "books" collection
// This executes at build time (SSG) or request time (SSR)
const books = await getCollection("books");

// Log the fetched books to the terminal for debugging purposes
console.log(books);

export const prerender = true;
---

<!-- Use the Layout component wrapper --><!-- Pass "Dev Books" as the title prop to the Layout -->
<Layout title="Dev Books, libros para programadores">
  <!-- Main header section of the page -->
  <main>
    <!-- 
      Main Heading:
      - Includes responsive text sizing and centering.
      - mb-8: Adds margin bottom to separate from the content below.
    -->
    <h1 class="text-center text-7xl font-extrabold mb-8"
      >Dev <span class="block">Books</span></h1
    >
  </main>

  <!-- 
    Books Section:
    - aria-label: Descriptive label for screen readers.
    - class="py-12": Adds vertical padding (top and bottom).
  -->
  <section aria-label="Libros para mejorar como en t dia a dia" class="py-12">
    <!-- 
      Responsive Container:
      - px-4: Horizontal padding for mobile screens.
      - mx-auto: Center the container.
      - max-w-screen-xl: Limit width on large screens.
    -->
    <div class="px-4 mx-auto max-w-screen-xl">
      <!-- 
        Grid Layout System:
        - grid: Initialize grid display.
        - gap-8: Set gap between grid items.
        - md:grid-cols-2: 2 columns on medium screens.
        - lg:grid-cols-3: 3 columns on large screens.
        - Default (implicit): 1 column on mobile.
      -->
      <div class="grid gap-6 md:grid-cols-2">
        {
          books.map((book) => {
            const { slug, data } = book;
            const { title, author, img, readtime, description, buy } = data;

            return (
              <article class="flex">
                <a
                  href={`/libro/${slug}`}
                  class="mb-2 xl:mb-0 transition hover:scale-110">
                  <img
                    class="mr-5 w-48 rounded"
                    src={`/${img}`}
                    alt={title}
                    style={`view-transition-name: img-${slug}`}
                  />
                </a>

                <div class="flex flex-col justify-center">
                  <h2
                    class="mb-2 text-2xl font-bold leading-tight text-white"
                    style={`view-transition-name: title-${slug}`}>
                    {title}
                  </h2>

                  <p class="mb-4 text-gray-300 max-w-sm">{description}</p>
                  <span class="text-xs">‚è≥ Lectura en {readtime} minutos</span>
                </div>
              </article>
            );
          })
        }
      </div>
    </div>
  </section>
</Layout>
